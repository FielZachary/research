FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}

application     buoyantPimpleFoam;    // Solver for transient buoyancy-driven flow

startFrom       startTime;
startTime       0;

stopAt          endTime;
endTime         100;                  // Duration of simulation in seconds

deltaT          1;                    // Time step size (seconds)

writeControl    timeStep;
writeInterval   10;                   // Output every 10 time steps

purgeWrite      0;

